
{
  "name": "MTM WIP Application (with MySQL 5.7.24)",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",

  "customizations": {
    "vscode": {
      "extensions": [
        // Core .NET Development
        "ms-dotnettools.csdevkit",
        "ms-dotnettools.csharp",
        "ms-dotnettools.vscode-dotnet-runtime",
        "ms-dotnettools.vscodeintellicode-csharp",
        
        // GitHub Integration
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "github.vscode-github-actions",
        "github.vscode-pull-request-github",
        
        // C# Tools
        "magic5644.vscode-csharp-dependency-graph",
        
        // Database
        "cweijan.vscode-mysql-client2",
        
        // Python Support
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.debugpy",
        "ms-python.vscode-python-envs",
        "donjayamanne.python-environment-manager",
        "donjayamanne.python-extension-pack",
        
        // Avalonia (UI Framework Support)
        "avaloniateam.vscode-avalonia",
        "addy2142.avalonia-templates",
        "microhobby.vscode-avalonia-community",
        "przemyslawonak.pimp-my-avalonia",
        
        // PowerShell
        "ms-vscode.powershell",
        
        // Data & CSV
        "mechatroner.rainbow-csv",
        
        // Documentation & Visualization
        "vstirbu.vscode-mermaid-preview",
        "tomoki1207.pdf",
        "yzane.markdown-pdf",
        
        // HTML & SVG
        "gingerturtle.html-preview-pro",
        "jock.svg",
        
        // Utilities
        "anselmhahn.vsplot",
        "dbaeumer.vscode-eslint",
        "openai.chatgpt",
        "timheuer.awesome-copilot",
        "wakatime.vscode-wakatime"
      ],
      
      "settings": {
        // .NET Settings
        "dotnet.defaultSolution": "MTM_WIP_Application.sln",
        "omnisharp.enableRoslynAnalyzers": true,
        "omnisharp.enableEditorConfigSupport": true,
        "csharp.semanticHighlighting.enabled": true,
        
        // Editor Settings
        "editor.formatOnSave": true,
        "files.insertFinalNewline": true,
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        
        // Python Settings
        "python.defaultInterpreterPath": "/usr/bin/python3.12",
        "python.linting.enabled": true,
        
        // MySQL Client Settings
        "mysql.host": "localhost",
        "mysql.port": 3306,
        
        // GitHub Copilot Settings
        "github.copilot.enable": {
          "*": true,
          "yaml": true,
          "plaintext": true,
          "markdown": true,
          "csharp": true
        }
      }
    }
  },

  "postCreateCommand": "bash .devcontainer/post-create.sh",
  
  "remoteEnv": {
    "DOTNET_CLI_TELEMETRY_OPTOUT": "1",
    "ASPNETCORE_ENVIRONMENT": "Development",
    "DB_CONNECTION_STRING": "Server=localhost; Port=3306; Database=mtm_wip_application_winforms_test; Uid=root;Pwd=root; SslMode=none"
  },

  "forwardPorts": [3306, 5000, 5001]
}